<body>

  <section id="signIn" class="id_checker">
    <div class="container">
      <div class="login-container">
              <div id="output"></div>
              <div class="avatar"></div>
              <div class="form-box">
                  <form action="/check" method="POST">
                      <div class="col-12 text-center">
                          <label for="number" class="form-label letrachica labelID">ID:</label>
                          <input type="text" id="number" name="number" required autofocus placeholder="<%= locals.error ? error :''%>">
                      </div>
                      <div class="col-12 text-center id_checker">
                          <button class="btn_sign btn btn-block login letrachica" type="submit" value="Submit">¡OK!</button>
                      </div>                
                  </form>
              </div>
          </div>          
    </div>
  </section>


    <section id="header" class="invitacion">
