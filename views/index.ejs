        <div class="container countdown">
          <div class="days">
            <div>
              <p class="value">00</p>
              <p class="letra-cd">Días</p>
            </div>
            
          </div>
  
          <div class="hours">
            <div>
              <p class="value">00</p>
              <p class="letra-cd">Horas</p>
            </div>
          </div>
  
          <div class="minutes">
            <div>
              <p class="value">00</p>
              <p class="letra-cd">Minutos</p>
            </div>
            
          </div>
  
          <div class="seconds">
            <div>
              <p class="value">00</p>
              <p class="letra-cd">Segundos</p>
            </div>
          </div>
        </div>
         
      </header>
    </section>
  
      <section class="invitacion">
